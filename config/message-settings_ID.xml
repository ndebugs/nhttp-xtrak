<?xml version="1.0" encoding="UTF-8"?>
<message-settings>
    <messages>
        <message>
            <name>provinsi</name>
            <request>
                <url>https://sig-dev.bps.go.id/restBridging/getwilayah/level/provinsi/parent/0</url>
            </request>
            <response>
                <fields>
                    <field>${data.kode_bps}</field>
                    <field>${data.nama_bps}</field>
                </fields>
            </response>
        </message>
        <message>
            <name>kabupaten</name>
            <request>
                <url>https://sig-dev.bps.go.id/restBridging/getwilayah/level/kabupaten/parent/${parent.data.kode_bps}</url>
            </request>
            <response>
                <fields>
                    <field>${data.kode_bps}</field>
                    <field>${parent.data.kode_bps}</field>
                    <field>#if( ${data.nama_dagri.startsWith("KOTA ")} )KOTA #elseif( ${data.nama_dagri.startsWith("KAB")} )KAB. #end${data.nama_bps}</field>
                </fields>
            </response>
        </message>
        <message>
            <name>kecamatan</name>
            <request>
                <url>https://sig-dev.bps.go.id/restBridging/getwilayah/level/kecamatan/parent/${parent.data.kode_bps}</url>
            </request>
            <response>
                <fields>
                    <field>${data.kode_bps}</field>
                    <field>${parent.data.kode_bps}</field>
                    <field>${data.nama_bps}</field>
                </fields>
            </response>
        </message>
        <message>
            <name>desa</name>
            <request>
                <url>https://sig-dev.bps.go.id/restBridging/getwilayah/level/desa/parent/${parent.data.kode_bps}</url>
            </request>
            <response>
                <fields>
                    <field>${data.kode_bps}</field>
                    <field>${parent.data.kode_bps}</field>
                    <field>${data.nama_bps}</field>
                </fields>
            </response>
        </message>
    </messages>
</message-settings>
